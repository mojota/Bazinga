<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mojota.bazinga.OneFragment">

    <Button
        android:id="@+id/bt_volley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onVolleyClick"
        android:text="@string/str_volley" />

    <Button
        android:id="@+id/bt_volley_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onVolleyUploadClick"
        android:text="@string/str_volley_upload" />

    <Button
        android:id="@+id/bt_textinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTextInputClick"
        android:text="@string/str_textInputLayout" />
</LinearLayout>
